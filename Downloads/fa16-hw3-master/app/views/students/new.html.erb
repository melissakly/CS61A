<form action="/students" method="POST">
  <label>Full name</label>
  <input name="full_name" placeholder=<%= @placeholder_full_name %> type="text"></input>
  <label>Course name</label>
  <input
    name="course"
    placeholder=<%= @placeholder_course %>
    type="text"
  >
  </input>
  <label>Grade level</label>
  <input name="grade_level" placeholder=<%= @placeholder_grade_level %> type="text"></input>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <button type="submit">Create student</button>
</form>
